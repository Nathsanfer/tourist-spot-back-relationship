generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TouristSpot { 
  id       Int    @id @default(autoincrement())
  name     String @unique
  region   String
  rating   Float
  imageUrl String

  sections Section[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pontos_turisticos")
}

model Section {
  id       Int     @id @default(autoincrement())
  title    String
  text     String
  imageUrl String?

  touristSpotId Int
  collection    TouristSpot @relation(fields: [touristSpotId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("secoes")
}
